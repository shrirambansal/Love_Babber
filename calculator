#include <iostream>
using namespace std;
int main() {
    int a, b;
    char op;
    cout << "enter the value of a :";
    cin >> a;
    cout << "enter the value of b :";
    cin >> b;
    cout << "enter the operation :";
    cin >> op;

    switch (op)
    {
    case '+': cout << (a+b);
              break;

    case '-': cout << (a-b);
              break;
    
    case '*': cout << (a*b);
              break;

    case '/': cout << (a/b);
              break;
    
    case '%': cout << (a%b);
              break;
    default: cout << "Please enter valid operation";
        break;
    }
}
